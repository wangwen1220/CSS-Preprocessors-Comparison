// loop (for)
for i in 1..4
    .column-{i}
        width (i*100/4)%

// loop (each)
arr = 1 2 3 4
for i in arr
    .column-{i}
        width (i*100/4)%

// loop (while) 不支持

// condition (if else)
contrast(color)
    color color
    if lightness(color) >= 50%
        background-color black
    else
        background-color white

.foo
    contrast(#ddd)
.bar
    contrast(#555)
