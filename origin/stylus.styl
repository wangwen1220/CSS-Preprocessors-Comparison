/* base extend 编译出extend对象 */
.a
    color #333
.b
    @extend .a
    font-size 12px

/* extend placeholder selectors ❤️  */
$outer
    color #888
.inner
    @extend $outer
    text-decoration none

/* cascade extend */
form
    button
        color #000
textarea
    @extend form button
    position relative

/* extend multiple selectors */
.c
    color #444
.d
    border 1px solid #000
.e
    width 100%
    @extend .c, .d

/* complex extend */
.message
    width 100%
.warning
    color purple
    height 50px
    @extend .message
.error
    color red
    @extend .warning
